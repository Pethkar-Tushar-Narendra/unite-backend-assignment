# Server Configuration
NODE_ENV=development
PORT=3003

# JWT Secrets
JWT_SECRET=change_this_to_a_secure_random_string
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string

# MySQL Database (AWS RDS or Local)
DB_HOST=your-database-host.rds.amazonaws.com
DB_USER=admin
DB_PASS=your_secure_password
DB_NAME=unite-db
DB_PORT=3306

# MongoDB
MONGODB_URI=mongodb://localhost:27017/unite

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=your-s3-bucket-name
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:your-topic-name
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/your-queue-name

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
